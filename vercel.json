{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "excludeFiles": "api/local_server.py api/remove-watermark.py api/test.py api/__pycache__/"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1",
      "status": 200
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PYTHONPATH": "."
  }
}